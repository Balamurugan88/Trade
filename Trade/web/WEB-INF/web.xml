<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <description>Contains Servlet Configuration and sitemesh filter mapping</description>
    <display-name>Trade</display-name>
    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>com.clri.servlet.CategoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.clri.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>com.clri.servlet.CustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>com.clri.servlet.ProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.clri.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExcelUpload</servlet-name>
        <servlet-class>com.clri.servlet.ExcelUpload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MajorProductions</servlet-name>
        <servlet-class>com.clri.servlet.MajorProductionsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MajorCustomers</servlet-name>
        <servlet-class>com.clri.servlet.MajorCustomersServlet</servlet-class>
    </servlet>
    
    
    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>com.clri.servlet.ReportServlet</servlet-class>
    </servlet>
    <!-- Customer Servlet Start -->
     <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/admin/customer/saveUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/admin/customer/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/admin/customer/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/admin/customer/list</url-pattern>
    </servlet-mapping>
    <!-- Customer Servlet End -->
    <!-- category Start -->
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/admin/category/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/admin/category/saveUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/admin/category/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/admin/category/delete</url-pattern>
    </servlet-mapping>
    <!-- Category End -->
    <!-- Raw Materials Mapping Start -->
     <servlet-mapping>
        <servlet-name>MajorProductions</servlet-name>
        <url-pattern>/admin/majorproductions/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MajorProductions</servlet-name>
        <url-pattern>/admin/majorproductions/saveUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MajorProductions</servlet-name>
        <url-pattern>/admin/majorproductions/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MajorProductions</servlet-name>
        <url-pattern>/admin/majorproductions/delete</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>MajorCustomers</servlet-name>
        <url-pattern>/admin/majorcustomer/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MajorCustomers</servlet-name>
        <url-pattern>/admin/majorcustomer/saveUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MajorCustomers</servlet-name>
        <url-pattern>/admin/majorcustomer/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MajorCustomers</servlet-name>
        <url-pattern>/admin/majorcustomer/delete</url-pattern>
    </servlet-mapping>
    
    
    
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/reports/list</url-pattern>
    </servlet-mapping>
   
    <!-- Report Mapping End -->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginAuthenticate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/product/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExcelUpload</servlet-name>
        <url-pattern>/admin/ExcelUpload</url-pattern>
    </servlet-mapping>
    <!-- Filter Starting -->
    <filter>
        <filter-name>adminAuthFilter</filter-name>
        <filter-class>
            com.clri.filter.AuthorizationFilter
        </filter-class>
        <init-param>
            <param-name>roles</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>onFailure</param-name>
            <param-value>/failure.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>excludePatterns</param-name>
            <param-value>/static/*,/LoginAuthenticate,/logout,/index.jsp,reports/list</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>cutomerAuthFilter</filter-name>
        <filter-class>
            com.clri.filter.AuthorizationFilter
        </filter-class>
        <init-param>
            <param-name>roles</param-name>
            <param-value>admin,customer</param-value>
        </init-param>
        <init-param>
            <param-name>onFailure</param-name>
            <param-value>/failure.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>excludePatterns</param-name>
            <param-value>/static/*,/LoginAuthenticate,/logout,/index.jsp</param-value>
        </init-param>
    </filter>
     <filter-mapping>
        <filter-name> cutomerAuthFilter </filter-name>
        <url-pattern>/reports/*</url-pattern>
    </filter-mapping>
     <filter-mapping>
        <filter-name>adminAuthFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    
   
   
    <!-- Filter Ending -->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>
            com.opensymphony.module.sitemesh.filter.PageFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
